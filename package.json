{
    "name": "boop-for-cs-pedagogy",
    "displayName": "BOOP: How to Right Code!",
    "description": "Get it right, then get it written!",
    "publisher": "VaaniGoenka",
    "version": "0.7.1",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vaaniGO/ICSLang/tree/main"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:ics"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ics",
                "aliases": [
                    "ICS",
                    "ics"
                ],
                "extensions": [
                    ".ics"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ics",
                "scopeName": "source.ics",
                "path": "./syntaxes/ics.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "ics.compile",
                "title": "Compile ICS",
                "category": "ICS"
            },
            {
                "command": "ics.compile_a1",
                "title": "Compile for Assignment #1",
                "category": "ICS"
            }
        ],
        "keybindings": [
            {
                "command": "ics.compile",
                "key": "ctrl+shift+c",
                "when": "editorLangId == ics"
            }
        ],
        "themes": [
            {
                "label": "ICS Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/ics-theme.json"
            }
        ],
        "configuration": {
            "title": "ICS Language",
            "properties": {
                "ics.outputPath": {
                    "type": "string",
                    "default": "./output",
                    "description": "Output path for compiled HTML files"
                },
                "ics.enableAutoCompletion": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable auto-completion for ICS keywords"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": ""
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/react": "^19.1.8",
        "@types/vscode": "^1.74.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "dotenv": "^17.2.1",
        "json": "^11.0.0",
        "lucide-react": "^0.525.0",
        "node-fetch": "^3.3.2",
        "puppeteer": "^24.14.0",
        "react": "^19.1.0",
        "requests": "^0.3.0",
        "ts-node": "^10.9.2",
        "vscode-languageclient": "^8.1.0",
        "vscode-languageserver": "^8.1.0",
        "vscode-languageserver-textdocument": "^1.0.8"
    }
}
